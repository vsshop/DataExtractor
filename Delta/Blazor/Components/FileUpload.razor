<label class="uploader" for="@Id">
    <div class="info">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
            <polyline points="17 8 12 3 7 8"></polyline>
            <line x1="12" y1="3" x2="12" y2="15"></line>
        </svg>
        <div>@Text</div>
    </div>
    <InputFile OnChange="OnChange" multiple class="file-input" id="@Id" />
</label>

@code {
    [Parameter] public string Text { get; set; } = "Drop files here or click to browse";
    [Parameter] public string Id { get; set; } = "fileInput";
    [Parameter] public EventCallback<InputFileChangeEventArgs> OnChange { get; set; }
}
